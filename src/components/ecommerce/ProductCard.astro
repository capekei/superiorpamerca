---
// Definici√≥n de props para el componente
interface Props {
  id: number;
  nombre: string;
  precio: number;
  descripcion: string;
  imagen: string;
}

const { id, nombre, precio, descripcion, imagen } = Astro.props;
---

<!-- Componente de tarjeta de producto usando UnoCSS -->
<div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-200">
  <img src={imagen} alt={nombre} class="w-full h-48 object-cover" />
  <div class="p-4 flex flex-col h-48">
    <h3 class="text-lg font-bold mb-1">{nombre}</h3>
    <p class="text-primary font-bold mb-2">${precio.toFixed(2)}</p>
    <p class="text-neutral/80 text-sm mb-4 line-clamp-2">{descripcion}</p>
    <a href={`/tienda/producto/${id}`} class="mt-auto py-2 px-4 bg-primary text-white rounded-lg font-semibold hover:bg-primary/80 transition-colors duration-200">
      Ver detalles
    </a>
  </div>
</div> 