---
const today = new Date();

// Enlaces de navegación
const navLinks = [
  { text: 'Inicio', url: '/' },
  { text: 'Tienda', url: '/tienda' },
  { text: 'Carrito', url: '/tienda/carrito' },
  { text: 'Nosotros', url: '/about' },
];

// Redes sociales
const socialLinks = [
  {
    name: 'Facebook',
    url: '#',
    icon: `<path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>`
  },
  {
    name: 'Instagram',
    url: '#',
    icon: `<rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>`
  },
  {
    name: 'Twitter',
    url: '#',
    icon: `<path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path>`
  },
];
---

<footer class="bg-primary text-white pt-16 pb-8 mt-12 relative overflow-hidden">
  <!-- Elementos decorativos de fondo -->
  <div class="absolute top-0 left-0 w-full h-20 bg-gradient-to-b from-white to-transparent opacity-5"></div>
  <div class="absolute top-20 right-10 w-60 h-60 rounded-full bg-accent/5 blur-3xl"></div>
  <div class="absolute bottom-10 left-10 w-60 h-60 rounded-full bg-white/5 blur-3xl"></div>
  
  <div class="container mx-auto px-6 relative z-10">
    <!-- Sección principal del footer -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-10 mb-12">
      <!-- Logo y descripción -->
      <div>
        <div class="flex items-center mb-6">
          <div class="bg-secondary/80 backdrop-blur-sm px-4 py-2 rounded-xl shadow-md h-12 flex items-center">
            <img 
              src="/logo.png" 
              alt="Logo Superior Pamerca" 
              class="h-8 w-auto object-contain"
            />
          </div>
        </div>
        <p class="text-gray-300 text-sm leading-relaxed">Tu tienda online de confianza para productos de calidad diseñados para transformar tu hogar.</p>
      </div>
      
      <!-- Enlaces rápidos -->
      <div>
        <h3 class="text-lg font-medium text-white mb-6 flex items-center gap-2">
          <span class="w-6 h-[2px] bg-accent rounded-full"></span>
          <span>Enlaces Rápidos</span>
        </h3>
        <ul class="space-y-3">
          {navLinks.map(link => (
            <li>
              <a 
                href={link.url} 
                class="text-gray-300 hover:text-white transition-colors duration-300 text-sm flex items-center gap-2 group"
              >
                <span class="w-0 h-[1px] bg-accent group-hover:w-3 transition-all duration-300"></span>
                <span>{link.text}</span>
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Contacto -->
      <div>
        <h3 class="text-lg font-medium text-white mb-6 flex items-center gap-2">
          <span class="w-6 h-[2px] bg-accent rounded-full"></span>
          <span>Contacto</span>
        </h3>
        <div class="space-y-3">
          <p class="text-gray-300 text-sm flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <span>info@superiorpamerca.com</span>
          </p>
          <p class="text-gray-300 text-sm flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <span>(123) 456-7890</span>
          </p>
        </div>
      </div>
      
      <!-- Boletín -->
      <div>
        <h3 class="text-lg font-medium text-white mb-6 flex items-center gap-2">
          <span class="w-6 h-[2px] bg-accent rounded-full"></span>
          <span>Boletín</span>
        </h3>
        <p class="text-gray-300 text-sm mb-4">Suscríbete para recibir nuestras novedades y ofertas exclusivas.</p>
        <div class="flex">
          <input 
            type="email" 
            placeholder="Tu email" 
            class="bg-white/10 text-white text-sm rounded-l-lg px-4 py-2 w-full focus:outline-none focus:ring-1 focus:ring-accent/50 border-0"
          />
          <button class="bg-accent hover:bg-accent/90 text-white text-sm font-medium px-4 py-2 rounded-r-lg transition-colors duration-300">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          </button>
        </div>
      </div>
    </div>
    
    <!-- Línea divisoria -->
    <div class="h-px w-full bg-white/10 mb-8"></div>
    
    <!-- Copyright y redes sociales -->
    <div class="flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-gray-400 text-sm">&copy; {today.getFullYear()} Superior Pamerca. Todos los derechos reservados.</p>
      
      <!-- Redes sociales -->
      <div class="flex items-center gap-3">
        {socialLinks.map(social => (
          <a 
            href={social.url} 
            target="_blank" 
            rel="noopener noreferrer" 
            aria-label={social.name}
            class="flex items-center justify-center w-9 h-9 rounded-full bg-white/10 text-gray-300 transition-all duration-300 hover:bg-accent hover:text-white hover:-translate-y-1"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" set:html={social.icon} />
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>
