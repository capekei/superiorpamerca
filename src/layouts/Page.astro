---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title, description, heroImage } = Astro.props;
---

<html lang="es">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body class="bg-background text-text">
		<Header />
		<main class="w-full max-w-full mx-auto">
			{heroImage && (
				<div class="w-full h-[300px] bg-cover bg-center relative mb-8" style={`background-image: url(${heroImage});`}>
					<div class="absolute inset-0 bg-black/40"></div>
					<div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 text-center text-white z-10 w-full max-w-[800px] px-4">
						<h1 class="text-4xl font-bold mb-4">{title}</h1>
						{description && <p class="text-lg">{description}</p>}
					</div>
				</div>
			)}
			<div class="max-w-7xl mx-auto px-4 pb-12">
				<slot />
			</div>
		</main>
		<Footer />
	</body>
</html>
